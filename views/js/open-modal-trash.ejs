<script>
  $(document).ready(() => {

    let productId

    $('.btn-showModal-trash').click(function () {
      productId = $(this).data('id');
    })

    $('.btn-product-delete').click(() => {
      console.log(productId)
      $.ajax({
        type: 'DELETE',
        url: `/product/${productId}`,
      }).done(function (dados) {
        alert("Produto deletado com sucesso!")
        location.reload()
      }).fail(function (error) {
        console.log(error)
        alert("Erro ao deletar o produto!")
      })

    })

  })
</script>