<style>
  .space-table-home {
    margin-top: 40px;
  }

  .input-modal {
    margin-bottom: 10px;
  }

  .btn-border-remove {
    border: none;
  }
</style>



<div class="modal fade" id="modal-update" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Atualizar dados do produto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">


        <form class="col g-2 input-modal">

          <div class="form-floating input-modal">
            <select class="form-select" id="floatingSelect">
              <option id="add" value="add" selected>Adicionar</option>
              <option id="remove" value="remove">Remover</option>
            </select>
            <label for="floatingSelect">Tipo de operação</label>
          </div>

          <div class="col-md input-modal">
            <div class="form-floating">
              <input type="text" class="form-control input-product input-product-modal" id="floatingInputGrid"
                placeholder="Insira um produto" name="productName" required />
              <label for="floatingInputGrid">Produto</label>
            </div>
          </div>

          <div class="col-md input-modal">
            <div class="form-floating">
              <input type="number" class="form-control input-stock input-stock-modal" id="floatingInputGrid"
                placeholder="Insira a quantidade" name="stock" />
              <label for="floatingInputGrid">Quantidade</label>
            </div>
          </div>

          <div class="col-md input-modal">
            <div class="form-floating">
              <input type="number" class="form-control input-value input-value-modal" id="floatingInputGrid"
                placeholder="Insira o valor" name="value" required />
              <label for="floatingInputGrid">Valor R$</label>
            </div>
          </div>

        </form>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary edited btn-product-update" data-bs-dismiss="modal">Salvar
          Alterações</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modal-trash" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Deseja deletar esse produto? Não será possível restaura-lo
          depois!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary edited btn-product-delete" data-bs-dismiss="modal">Apagar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
      </div>

    </div>
  </div>
</div>

<table class="table table-striped table-hover table-bordered space-table-home">
  <thead class="table-thead-product">
    <tr>
      <th scope="col"></th>
      <th scope="col">Produto</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Valor Unitário R$</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% table.forEach((item, index)=> { %>
      <tr>
        <th scope="row">
          <%- index + 1 %>
        </th>
        <td>
          <%= item.productName %>
        </td>
        <td>
          <%= item.stock %>
        </td>
        <td>
          R$<%= item.value %>
        </td>
        <td style="text-align: center;" class="row-md">
          <button class="btn-showModal-trash btn-border-remove" data-id="<%= item.id %>" data-bs-toggle="modal"
            data-bs-target="#modal-trash">
            <i class="ph-fill ph-trash"></i>
          </button>
          <button class="btn-showModal btn-border-remove btn-modal-update" data-id="<%= item.id %>" data-bs-toggle="modal"
            data-bs-target="#modal-update">
            <i class="ph-fill ph-pencil-line"></i>
          </button>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>