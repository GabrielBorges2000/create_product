<style>
  .space-table-home {
    margin-top: 40px;
  }
</style>

<table class="table table-striped table-hover table-bordered space-table-home">
  <thead class="table-thead-product">
    <tr>
      <th scope="col"></th>
      <th scope="col">Produto</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Valor Unit√°rio R$</th>
    </tr>
  </thead>
  <tbody>
    <% table.forEach((item, index)=> { %>
      <tr>
        <th scope="row">
          <%- index + 1 %>
        </th>
        <td>
          <%= item.productName %>
        </td>
        <td>
          <%= item.stock %>
        </td>
        <td>
          R$<%= item.value %>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>